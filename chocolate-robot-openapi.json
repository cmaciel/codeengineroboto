  "paths": {
    "/truffle": {
      "post": {
          "parameters": [],
          "summary": "Get truffle",
          "description": "Get truffle",
          "operationId": "postTruffleSelection",
          "requestBody": {
            "description": "Extension to connect WA and Code Engine",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties":{
                    "color":{
                      "type": "string"
                    }
                  }
                }
              }
            },
            "required": true
          },
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "position": {
                      "type": "string",
                      "example": "7"
                    }
                  }
                }
              }
            },
            "description": "Successful response"
          },
          "401": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPError"
                }
              }
            },
            "description": "Authentication error"
          },
          "404": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPError"
                }
              }
            },
            "description": "Not found"
          }
        }
      }
    }
  },
     "/idequipment": {
      "post": {
        "summary": "Fetches equipment checked out based on id number",
        "description": "This endpoint returns rented equipment based on id number",
        "operationId": "getequipment",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "id": {
                    "type": "integer",
                    "description": "The ID of the customer"
                  }
                },
                "required": [
                  "id"
                ]
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "equipment1": {
                      "type": "string",
                      "description": "The name or description of equipment"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "An error occurred"
          }
        }
      }
    },
